<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Center">
        <Button Background="Black" Foreground="Orange" FontWeight="Bold" Click="CreateTableInDB_Click">Create Table in DB</Button>
        <Button Background="Black" Foreground="Orange" FontWeight="Bold" Click="AddDataToDB_Click">Add Data to Db</Button>
        <Button Background="Black" Foreground="Orange" FontWeight="Bold" Click="RetrieveDataFromDB_Click">Retrieve Data From DB</Button>
        <Button Background="Black" Foreground="Orange" FontWeight="Bold" Click="Exit_Click">Exit</Button>        
    </StackPanel>
    
</Window>
