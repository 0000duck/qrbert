<UserControl x:Class="Wpf1.Webcam" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"              
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:webCamControl="clr-namespace:WebcamControl;assembly=WebcamControl"
             MinHeight="100" MinWidth="100"
             mc:Ignorable="d">
    <Grid>
        <webCamControl:Webcam x:Name="WinFormsHost" Margin="0" Background="{x:Null}">
            <Panel x:Name="Preview" x:FieldModifier="public" />
        </webCamControl:Webcam>
    </Grid>
</UserControl>