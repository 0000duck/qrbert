    <StackPanel Orientation = "Vertical" Height = "450" Width = "500" Margin = "-400, 0, 0, 0" Background="White">
            
            <StackPanel Height = "40" Width="250" Margin = "560, 100 -300, 0" Background="Transparent" >
                    <Label Background="Transparent" 
                           Foreground="White" 
                           FontWeight="Bold"
                           FontSize="25"
                    >Sign in to QRbert</Label>
            </StackPanel>
            <StackPanel Height = "25" Width="200" Margin = "540, 50, -300, 0" >
                    
                    <TextBox 
                            Background="White" 
                            Foreground="Orange" 
                            FontWeight="Bold" 
                            BorderBrush="Orange"
                            BorderThickness="2"
                            Text="Email"
                            Height="25"
                            
                            
                    ><TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                    </TextBox.Resources></TextBox>
            </StackPanel>
            <StackPanel Height = "20" Width="200" Margin = "540, 7, -300, 0" >
                    <TextBox Background="White" 
                             Foreground="Orange" 
                             FontWeight="Bold" 
                             BorderBrush="Orange"
                             BorderThickness="2"
                             Text="Password"
            
                    ><TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                    </TextBox.Resources></TextBox>
                    
            </StackPanel>
            <StackPanel Height = "20" Width="150" Margin = "540, 20, -300, 0" >
                    <Button Background="Orange" 
                           Foreground="White" 
                           FontWeight="Bold"
                           FontSize="10"
                           BorderThickness="0"
                           
                    >Forgot your password?<Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                    </Button.Resources></Button>
                    
            </StackPanel>
            <StackPanel Height = "20" Width="50" Margin = "-215, 10, -200, 0" >
                    <TextBox Background="White" 
                             Foreground="Orange" 
                             FontWeight="Bold" 
                             BorderBrush="Orange"
                             BorderThickness="2"
                             Text="Sign in"
                    ><TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                    </TextBox.Resources></TextBox>
            </StackPanel>
            <StackPanel Height = "40" Width="300" Margin = "-70, -300 -200, 0" Background="White" >
                    <Label Background="White" 
                           Foreground="Orange" 
                           FontWeight="Bold"
                           FontSize="25"
                    >Welcome Back!</Label>
            </StackPanel>
