                            <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                    </Button.Resources>Sign in</Button>
            </StackPanel>
            <Image Width="200" Height="150" Source="Qbert_logo.png" Margin = "-550, -500, -200, 0" />
