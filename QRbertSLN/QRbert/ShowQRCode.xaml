<Window x:Class="QRbert.ShowQRCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:QRbert"
        mc:Ignorable="d"
        Title="ShowQRCode" Height="400" Width="400">
    <Grid>
        <StackPanel Height = "400" Width="400" Margin = "0, 0, 0, 0">
            <Image Name="QRCodeViewer" Width="400" Height="400" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
