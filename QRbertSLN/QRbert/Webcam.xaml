<UserControl x:Class="QRbert.Webcam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QRbert"
             xmlns:webCamControl="clr-namespace:WebcamControl;assembly=WebcamControl"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <webCamControl:Webcam x:Name="WinFormsHost" Margin="0" Background="{x:Null}">
            <Panel x:Name="WebcamPanel"/>
        </webCamControl:Webcam>
    </Grid>
</UserControl>
