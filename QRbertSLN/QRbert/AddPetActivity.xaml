<Window x:Class="QRbert.AddPetActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="AddPetActivity" Height="800" Width="800">
    <!-- This the template for the Menus; It creates the menu with a white background and black bold letters;
        allows the user to hover over the menu and display the menus as well as change the letters to orange-->
    <Window.Resources>
        <LinearGradientBrush x:Key="DarkBrush" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.01"/>
                    <GradientStop Color="White" Offset="0.05"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="Clicked" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>


        <Style TargetType="Menu">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value = "Bold"/>
            <Setter Property= "FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Menu">
                        <Border x:Name="MainMenu" Background="White">
                            <StackPanel ClipToBounds="True" Orientation="Horizontal" IsItemsHost="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="MenuItemControlTemplate1" TargetType="{x:Type MenuItem}">
            <Border x:Name="templateRoot" 
                    BorderBrush="White" 
                    CornerRadius="3" 
                    BorderThickness="1" 
                    Background="{TemplateBinding Background}" 
                    SnapsToDevicePixels="True">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <ContentPresenter ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" Grid.Column="1" ContentStringFormat="{TemplateBinding HeaderStringFormat}" ContentSource="Header" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    <Popup x:Name="PART_Popup"  AllowsTransparency="True" Focusable="False" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}" Placement="Bottom">
                        <Border x:Name="SubMenuBorder" BorderBrush="White" BorderThickness="1" Background="White" Padding="2">
                            <ScrollViewer x:Name="SubMenuScrollViewer" Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                <Grid RenderOptions.ClearTypeHint="Enabled">
                                    <Canvas HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
                                        <Rectangle x:Name="OpaqueRect" Fill="{Binding Background, ElementName=SubMenuBorder}" Height="{Binding ActualHeight, ElementName=SubMenuBorder}" Width="{Binding ActualWidth, ElementName=SubMenuBorder}"/>
                                    </Canvas>
                                    <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Cycle" Grid.IsSharedSizeScope="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" KeyboardNavigation.TabNavigation="Cycle"/>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Popup>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSuspendingPopupAnimation" Value="True">
                    <Setter Property="PopupAnimation" TargetName="PART_Popup" Value="None"/>
                </Trigger>

                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" TargetName="templateRoot" Value="{StaticResource DarkBrush}"/>
                    <Setter Property="BorderBrush" TargetName="templateRoot" Value="White"/>
                    <Setter Property="BorderThickness" TargetName="templateRoot" Value="1"></Setter>
                </Trigger>

                <Trigger Property="CanContentScroll" SourceName="SubMenuScrollViewer" Value="False">
                    <Setter Property="Canvas.Top" TargetName="OpaqueRect" Value="{Binding VerticalOffset, ElementName=SubMenuScrollViewer}"/>
                    <Setter Property="Canvas.Left" TargetName="OpaqueRect" Value="{Binding HorizontalOffset, ElementName=SubMenuScrollViewer}"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter TargetName="templateRoot" Property="Background" Value="{StaticResource Clicked}" />
                    <Setter Property="Header" Value="Test" />
                    <Setter Property="BorderBrush" Value="White"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                </Trigger>
                <!-- This is the trigger that tells the program to display the menu when the mouse hovers over it
                        as well change the black letters to orange-->
                <Trigger Property="IsMouseOver" Value="True" >
                    <Setter Property="IsOpen" TargetName="PART_Popup" Value="True"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Foreground" Value="#FF9100"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <!-- This the end of the menu template -->
    <!--  -->
    <!-- This the main stack-panel containing all the controls on the entire page-->
    <StackPanel Background="Transparent" Height="1200" Width="800" Margin="0,0,0,0">
        <!-- This stack-panel contains the orange QRbert logo on the left corner as well as the perts background image-->
        <!-- This the main stack-panel containing all the controls on the entire page-->
        <StackPanel>
            <Image Width="150" Height="150" Source="Images/Qbert_logo_orange.png" 
                   Margin="-650,-25,0,0"
                   MouseDown="HomeStaffPortalBtn_Click"/>
            <Image Width="40" Height="40" Source="Images/Notification.png" 
                   Margin="700,-100,0,0"
                   Name="AlertStaffBellIcon"
                   Visibility="Hidden"
                   MouseDown="NotificationBtn_Click"/>
            <Image Width="800" Height="450" Source="Images/petsBackground.png" 
                   Margin="0,-100,0,-50"/>
            <Image Width="800" Height="450" Source="Images/petsBackground.png" 
                   Margin="0,-50,0,-50"/>
        </StackPanel>
        <!-- This is the Timesheet menu-->
        <Menu Width="100" Height="22" Margin="300, -700, 0, 0" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top">
            <MenuItem Header="Timesheet" Template="{DynamicResource MenuItemControlTemplate1}">
                <MenuItem 
                    Header="Lock Timesheet"
                    Click="LockTimesheetBtn_Click"/>
                <MenuItem 
                    Header="Rounding Rule"
                    Click="RoundingRulesBtn_Click"/>
            </MenuItem>
        </Menu>
        <!-- This is the Volunteer menu-->
        <Menu Width="100" Height="22" Margin="400, -700, 0, 0" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top">
            <MenuItem Header="Volunteer" Template="{DynamicResource MenuItemControlTemplate1}">
                <MenuItem 
                    Header="Track Active"
                    Click="TrackActiveVolunteersBtn_Click"/>
                <MenuItem 
                    Header="Staff Search"
                    Click="StaffSearchBtn_Click"/>
            </MenuItem>
        </Menu>
        <!-- This is the Animal menu-->
        <Menu Width="100" Height="22" Margin="500, -700, 0, 0" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top">
            <MenuItem Header="Animals" Template="{DynamicResource MenuItemControlTemplate1}">
                <MenuItem 
                    Header="Select a Pet"
                    Click="ScanPetQRCodeRedirectBtn_Click"/>
                <MenuItem 
                    Header="Remove Animal"
                    Click="ScanPetQRCodeRedirectBtn_Click"/>
                <MenuItem 
                    Header="Pet Reports"
                    Click="PetReportsBtn_Click"/>
                <MenuItem 
                    Header = "View Pet Activity"
                    Click="ViewPetActivityBtn_Click"/>
                <MenuItem 
                    Header = "View Pet Treatment"
                    Click="ViewPetTreatmentBtn_Click"/>
            </MenuItem>
        </Menu>
        <!-- This is the My Account menu-->
        <Menu Width="100" Height="22" Margin="600, -700, 0, 0" HorizontalAlignment="Left" Background="White" VerticalAlignment="Top">
            <MenuItem Header="My Account" Template="{DynamicResource MenuItemControlTemplate1}">
                <MenuItem 
                    Header="Staff Account"
                    Click="StaffMyAccountBtn_Click"/>
                <MenuItem 
                    Header="Log out"
                    Click="LogOutBtn_Click"/>
            </MenuItem>
        </Menu>
        <!-- This the orange semitransparent stack panel in the center with the button controls-->
        <StackPanel Background="#FF9100" Width="400" Height="600" Opacity="0.7" 
                    Margin = "0, -700, 0, 0"/>
        <!-- This the "Add Pet Activity" label at the top center of the orange semitransparent stack-panel-->
        <Label 
            Width = "300"
            Height="50"
            FontWeight="Bold" 
            HorizontalAlignment="Center"
            Content="Add Pet Activity" 
            Foreground="White" 
            FontSize="30"
            Margin="25,-1200,0,0"
        />
        <!-- This the "Pet ID" text-box control-->
        <DockPanel LastChildFill="False">
            <Label Width = "250" Height="35" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-1100,-800,0" FontSize="14"
                     Name="PetId">
                Pet ID
            </Label>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-1060,0,0"/>
        </DockPanel>
        <!-- This the "Pet Name" text-box control-->
        <DockPanel LastChildFill="False">
            <Label x:Name="PetName" Width = "250" Height="35" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-1000,-800,0" FontSize="14">
                Pet Name
            </Label>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-960,0,0"/>
        </DockPanel>
        <!-- This the "Activity Date" text-box control-->
        <DockPanel LastChildFill="False">
            <Label Width = "250" Height="35" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-900,-800,0" FontSize="14"
                     Name="ActivityDate">
                Activity Date (MM/DD/YYYY)
            </Label>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-860,0,0"/>
        </DockPanel>
        <!-- This the "Water given" text-box control-->
        <DockPanel LastChildFill="False">
            <TextBox Width = "250" Height="25" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-800,-800,0" FontSize="14"
                     Name="WaterGivenTxt">
                Water Given
            </TextBox>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-760,0,0"/>
        </DockPanel>
        <!-- This the "Clean Kennel" text-box control-->
        <DockPanel LastChildFill="False">
            <TextBox Width = "250" Height="25" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-700,-800,0" FontSize="14"
                     Name="CleanKennelTxt">
                Clean Kennel
            </TextBox>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-660,0,0"/>
        </DockPanel>
        <!-- This the "Staff ID" text-box control-->
        <DockPanel LastChildFill="False">
            <TextBox Width = "250" Height="25" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-600,-800,0" FontSize="14"
                     Name="StaffIdTxt">
                Staff ID
            </TextBox>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-560,0,0"/>
        </DockPanel>
        <!-- This the "Volunteer ID" text-box control-->
        <DockPanel LastChildFill="False">
            <TextBox Width = "250" Height="25" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-500,-800,0" FontSize="14"
                     Name="VolunteerIdTxt">
                Volunteer ID
            </TextBox>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-460,0,0"/>
        </DockPanel>
        <!-- This the "Notes" text-box control-->
        <DockPanel LastChildFill="False">
            <TextBox Width = "250" Height="25" Background="Transparent" Foreground="White" 
                     FontWeight="Bold" BorderBrush="Transparent" BorderThickness="2"
                     Margin="0,-400,-800,0" FontSize="14"
                     Name="NotesTxt">
                Notes
            </TextBox>
            <Rectangle DockPanel.Dock="Top" Fill="White" Height="2" Width="250" 
                       Margin="0,-360,0,0"/>
        </DockPanel>
        <!-- This the "Add Pet Activity" button control-->
        <Button 
            Background="White" 
            Foreground="Orange" 
            FontWeight="Bold" 
            BorderBrush="Orange" 
            BorderThickness="2" 
            Height="35" 
            Width="200" 
            FontSize="16" 
            ClickMode="Press"
            Margin="0,-250,0,0"
            Click="AddPetActivityBtn_Click">
            <Button.Resources>
                <Style 
                    TargetType="{x:Type Border}"
                >
                    <Setter 
                        Property="CornerRadius" 
                        Value="15"
                    />
                </Style>
            </Button.Resources>
            Add Pet Activity 
        </Button>
        <!-- This the "Terms and Privacy Notice" button control at the bottom of the page -->
        <Button Height = "25" Width = "300" Content="Terms and Privacy Notice" Background="Transparent" Foreground="#FF9100" FontSize="16" 
                BorderBrush="Transparent" FontWeight="Normal" ClickMode="Press"
                Click="TermsOfPrivacyBtn_Click"
                Margin="-500,-25,0,0">
        </Button>
        <!-- This the "FAQs" button control at the bottom of the page -->
        <Button Height = "25" Width = "150" Content="FAQs" Background="Transparent" Foreground="#FF9100" FontSize="16" 
                BorderBrush="Transparent" FontWeight="Normal" ClickMode="Press"
                Click="FAQRedirectBtn_Click"
                Margin="0,-25,0,0">
        </Button>
        <!-- This the "©2022 QRbert Inc." button control at the bottom of the page -->
        <Button Height = "25" Width = "150" Content="©2022 QRbert Inc." Background="Transparent" Foreground="#FF9100" FontSize="16" 
                BorderBrush="Transparent" FontWeight="Normal" ClickMode="Press"
                Margin="500,-25,0,0">
        </Button>
    </StackPanel>
</Window>
